{
  "name": "ecommerce-microservices",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run db:up && npm run dev:services",
    "dev:services": "concurrently \"npm run dev -w api-gateway\" \"npm run dev -w auth-service\"",
    "build": "npm run build --workspaces",
    "db:up": "docker compose up -d postgres redis",
    "db:down": "docker compose down",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.6"
  }
}
